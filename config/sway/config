include /etc/sway/config.d/*

### Variables
set $mod Mod4
set $TERMINAL kitty
set $BROWSER firefox
set $TOP htop

### Monitor
output eDP-1 mode 2880x1800 scale 2
output DP-1 mode 3840x2160 scale 2

### Input
input "type:keyboard" {
    xkb_options caps:escape
    repeat_delay 500
    repeat_rate 30
    natural_scroll enabled
}

input "type:touchpad" {
    events disabled
    tap enabled
}

# Hide mouse after 5 seconds inactivity
# seat * hide_cursor 5000

### General
xwayland disable
# default|stacking|tabbed
# workspace_layout tabbed
default_border pixel 1
default_floating_border pixel 1
smart_borders on

workspace_auto_back_and_forth yes

gaps inner 1
gaps outer 1

### AutoStartup
exec /usr/lib/polkit-kde-authentication-agent-1
exec wl-paste --type text --watch cliphist store #Stores only text data
exec wl-paste --type image --watch cliphist store #Stores only image data
exec wm-gsetting
exec wm-idle
exec wm-xdg
# exec wm-xwayland
exec swaybg -i $HOME/.config/hypr/wallpaper/WhiteSur.png -m fill
# @FIX: 
# exec expose-filemanager.py
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob
exec_always --no-startup-id env LANG=zh_CN.UTF-8 LC_CTYPE=zh_CN.UTF-8 fcitx5 -d --replace

# AutoStartup APP
exec --no-startup-id auto-start

### Windowrule

# Assign
# assign [app_id="code"] workspace 5

# Inhibit Idle if a window is fullscreen
for_window [class="^.*"] inhibit_idle fullscreen
for_window [app_id="^.*"] inhibit_idle fullscreen

# Special rules for X11, wayland not supported `window_role`
for_window [window_role = "task_dialog"] floating enable
for_window [window_role = "pop-up"] floating enable
for_window [window_role = "bubble"] floating enable
for_window [window_role = "dialog"] floating enable
for_window [window_type = "dialog"] floating enable
for_window [window_type = "menu"] floating enable

# Floating Apps
for_window [app_id="org.kde.polkit-kde-authentication-agent-1"] floating enable
for_window [app_id="com.obsproject.Studio"] floating enable
for_window [app_id="org.telegram.desktop"] floating enable; sticky enable
for_window [app_id="org.qbittorrent.qBittorrent"] floating enable
for_window [app_id="org.wireshark.Wireshark"] floating enable
for_window [app_id="com.github.wwmm.easyeffects"] floating enable
for_window [app_id="org.fcitx.fcitx5-config-qt"] floating enable
for_window [app_id="remote-viewer"] floating enable
for_window [app_id="thunderbird"] floating enable; resize set 75ppt; sticky enable
for_window [title="^Open File$"] floating enable
for_window [app_id="Element"] floating enable
for_window [app_id="timeshift-gtk"] floating enable
for_window [app_id="anki"] floating enable
for_window [app_id="mpv"] floating enable

# JetBrains APPS
for_window [class="^(com.intellij.idea.Main)$" title="^(Welcome to*)$"] {
    floating enable
    resize set 70ppt 70ppt
}

# Floating Terminal
for_window [app_id="^(Alacritty|kitty)$" title="^(Float Terminal|System Monitor|Explore)$"] {
    sticky enable
    floating enable
    resize set 70ppt 70ppt
}

