profile {
		output eDP-1 enable mode 2880x1800 scale 2
}

profile multi {
		output eDP-1 enable mode 2880x1800 scale 2 position 0,0
		output DP-2 enable mode 1920x1080 scale 1 position -1080,-1200 transform 90
		exec swaymsg workspace 10, move workspace to DP-2
}

profile one {
		output eDP-1 enable mode 2880x1800 scale 2 position 0,0
		output DP-2 disable
}
