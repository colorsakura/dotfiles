{
  "general": {
    "disableAutoUpdate": true,
    "disableUpdateNag": true,
    "language": "zh",
    "preferredEditor": "neovim"
  },
  "security": {
    "auth": {
      "selectedType": "qwen-oauth"
    }
  },
  "$version": 2,
  "mcpServers": {
    "filesystem": {
      "command": "podman",
      "args": [
        "run",
        "-i",
        "--rm",
        "--mount",
        "type=bind,src=${PWD},dst=/projects",
        "mcp/filesystem",
        "/projects"
      ]
    }
  }
}